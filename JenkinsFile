/* groovylint-disable-next-line CompileStatic */
pipeline {
    agent any

    stages {
        stage('Build with docker') {
            agent {
                /* groovylint-disable-next-line ClosureStatementOnOpeningLineOfMultipleLineClosure */
                docker {
                    image 'node:18-alpine'
                    reuseNode true
                }
            }
            steps {
                sh '''
                echo "Starting build"
                ls -la
                ls -ltr build
                node --version
                npm --version
                npm ci
                npm run build
                ls -la
                '''
            }
        }

        stage('NPM Test') {
            steps {
                sh '''
                ls -la ./build
                sh 'test -f build/index.html'
                '''
            }
        }
    }
}
